<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="s17.person.employee">
  <body>

    <metal:main fill-slot="main">
      <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <dl class="portalMessage info"
            tal:condition="not:view/check_member">
            <dt i18n:translate="">Information</dt>
            <dd i18n:translate="">There is not a Plone user attached to this employee.</dd>
        </dl>

        <div class="person-main-info">
          <img class="image-left"
              tal:define="picture nocall:context/picture"
              tal:condition="nocall:picture"
              tal:attributes="src string:${context/absolute_url}/@@images/picture/mini" />
          <h1 class="documentFirstHeading">
            <span tal:replace="context/title" />
            <span
                tal:define="user_name python:view.w.get('IPloneUser.user_name');
                            user_name python:user_name and user_name.render().strip() or ''"
                tal:condition="user_name"
                tal:content="structure python:'(%s)' % user_name" />
          </h1>
          <div class="person-more-info"
              tal:define="main_info python:('given_name', 'surname', 'IPloneUser.user_name', 'picture', 'birthday', 'gender')">
            <label tal:content="view/w/gender/label"/>: <span tal:content="structure view/w/gender/render" /><br />
            <label tal:content="view/w/birthday/label"/>: <span tal:content="structure view/w/birthday/render" /><br />
            <tal:more-fields repeat="widget view/widgets/values">
              <tal:field
                  define="is_more python:widget.__name__ not in main_info
                                         and widget.value not in ('', [], {});
                          is_contact python:'IContactInfo' in widget.__name__"
                  condition="python:is_more and not is_contact">
                <label tal:content="structure widget/label" />:
                <span tal:content="structure widget/render" /><br />
              </tal:field>
            </tal:more-fields>
          </div>
        </div>

        <div class="person-contact-info">
          <tal:contact-fields
              define="foo string:"
              repeat="widget view/widgets/values">
            <tal:field
                define="is_contact python:'IContactInfo' in widget.__name__;
                        render widget/render;
                        has_info python:render.find('-2') < 0"
                condition="python:is_contact and has_info">
              <div class="visualClear" tal:condition="not:foo"><!-- --></div>
              <h3 tal:condition="python:not foo" i18n:translate="">
                Informações de contato
              </h3>
              <label tal:define="global foo string:bar"
                  tal:content="structure widget/label" />:
              <span tal:content="structure render" /><br />
            </tal:field>
          </tal:contact-fields>
        </div>

        <div class="field person-biography" tal:condition="view/biography">
          <h3 i18n:translate="">Biography</h3>
          <div tal:content="view/biography" />
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

      </tal:main-macro>
    </metal:main>

  </body>
</html>
